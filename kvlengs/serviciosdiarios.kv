

<VServiciosDiarios>:
    nombre:nombre
    descr:descr
    id_estado:id_estado
    precio:precio
    MDCard:
        elevation: 5
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .9,.9
        MDLabel:
            halign: "center"
            font_size : dp(30)
            size_hint_y: .1
            text: "Registrar Servicios Diarios"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            
            MDList:
                padding: dp(38)
                spacing: dp(10)
                MDTextField:
                    hint_text: "Nombre:"
                    id: nombre
                MDRaisedButton:
                    id: id_estado
                    text: "Estados"
                    pos_hint: {"center_x": .5, "center_y": .5}
                MDRaisedButton:
                    text: "Id Producto: "
                    id: menu_producto

                MDTextField:
                    hint_text: "Cantidad de productos: "
                    input_filter : "int"
                    id: cantidad_productos

                MDTextField:
                    hint_text: "Precio Unitario:"
                    id: precio
                    input_filter: 'int'

                MDGridLayout:
                    cols: 4
                    size_hint_y: None
                    height: dp(350)
                    MDLabel:
                        text: "Lunes"
                    MDCheckbox:
                        id: lunes
                    MDLabel:
                        text: "Martes"
                    MDCheckbox:
                        id: martes
                    MDLabel:
                        text: "Miercoles"
                    MDCheckbox:
                        id: miercoles
                    MDLabel:
                        text: "Jueves"
                    MDCheckbox:
                        id: jueves
                    MDLabel:
                        text: "Viernes"
                    MDCheckbox:
                        id: viernes
                    MDLabel:
                        text: "Sabado"
                    MDCheckbox:
                        id: sabado
                    MDLabel:
                        text: "Domingo"
                    MDCheckbox:
                        id: domingo
                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_y: None
                    height: dp(45)
                    MDLabel:
                        text: "Todas las Semanas?"
                    MDCheckbox:
                        id: toda_semana

                MDTextField:
                    hint_text: "URL Posicion Geografica"
                    id: url_posicion
                MDTextField:
                    hint_text: "Ubicacion de el servicio: Ejemplo Av TU hermana 156942"
                    id: ubicacion
                MDRaisedButton:
                    text: "Rut Cliente:"
                    id: botton_rut_accion

                MDRaisedButton:
                    text: "Rut Trabajador:"
                    id : botton_rut_trabajador

                MDTextField:
                    id:descr
                    hint_text: "Descripcion:"
                    multiline: True

    MDFloatingActionButtonSpeedDial:
        id: botones_servicios_diarios
        on_release_stack_button: root.accion_boton(*args)
        root_button_anim: True

                
