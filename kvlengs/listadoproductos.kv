<VListaProductos>:
    contenedor:contenedor
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False
    
        MDList:
            id: contenedor

            MDBoxLayout:
                padding: dp(30)
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(55)
                MDLabel:
                    text: "Buscar ID: "
                
                MDTextField:
                    hint_text: "Ejemplo: 431"

                MDFlatButton:
                    text: "Buscar"
    MDFloatingActionButtonSpeedDial:
        on_release_stack_button: root.accion_boton(*args)
        id: botones_lista_productos
        root_button_anim: True