


<VGastos>:
    botones:botones
    MDCardPre:
        size_hint: .95, .95
        adaptive_size: True
        elevation: 40
        pos_hint: {"center_x": .5, "center_y": .5}
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDList:
                padding: dp(30)
                spacing: dp(25)
                MDLabel:
                    text: "Crear Gastos"
                    font_size: dp(25)
                    haling: "center"

                MDRaisedButton:
                    text: "Departamento:"
                    id:departamento

                MDRaisedButton:
                    text: "Estado Gasto:"
                    id:estado_gasto

                MDTextField:
                    id: saldo
                    hint_text: "Saldo"
                    input_filter: 'int'

                MDRaisedButton:
                    text: "Fecha Creación: 00/00/00"
                    id: fecha_creacion
                    on_release: root.abrir_fecha()

                MDTextField:
                    id: descripcion
                    hint_text: "Descripción"
                    multiline: True



    MDFloatingActionButtonSpeedDial:
        size_hint_y: .1
        id: botones
        callback: root.accion_boton
        root_button_anim: True
