

<VEmpresas>:
    padding: dp(45)

    MDCardPre:
        orientation: 'vertical'
        elevation: 10
        spacing: "20dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .95,.95
        MDGridLayout:
            padding: dp(45)
            cols: 2
            PreLabel:
                text:"Rut Empresa"
            MDTextField:
                id: rut_empresa
                hint_text: "18.888.888-5"
                max_text_length: 12
                helper_text_mode: "on_error"
                helper_text: "Ingrese rut con este formato: 18.888.888-5"

            PreLabel:
                text:"Nombre Empresa"
            MDTextField:
                id: nombre_empresa
                hint_text: "LosTResPinos spa"
                max_text_length: 150
                helper_text_mode: "on_error"
                helper_text: "Maxima cantidad de caracteres es de 150"

            PreLabel:
                text:"Giro"
            MDTextField:
                id: giro_empresa
                hint_text: "Arriendo y venta de ba√±os quimicos"
                max_text_length: 150
                helper_text_mode: "on_error"
                helper_text: "Maxima cantidad de caracteres es de 150"


            PreLabel:
                text:"Direccion"
            MDTextField:
                id: direccion_empresa
                hint_text: "Michimalongo 14600, la pintana"
                max_text_length: 150
                helper_text_mode: "on_error"
                helper_text: "Maxima cantidad de caracteres es de 150"



            PreLabel:
                text:"Telefono"
            MDTextField:
                hint_text: "02XXXXXXX"
                max_text_length: 14
                helper_text_mode: "on_error"
                helper_text: "Maxima cantidad de caracteres es de 14"



            PreLabel:
                text:"Celular"
            MDTextField:
                max_text_length: 14
                hint_text: "+569XXXXXXXX"
                helper_text_mode: "on_error"
                helper_text: "Maxima cantidad de caracteres es de 14"



            PreLabel:
                text:"Correo"
            MDTextField:
                hint_text: "ejemplo@tudominio.cl"
                max_text_length: 150
                helper_text_mode: "on_error"
                helper_text: "Debe contener un correo entendible"

            PreLabel:
                text:"Correo Respaldo"
            MDTextField:
                max_text_length: 150
                hint_text: "ejemplo2@tudominio.cl"
                helper_text_mode: "on_error"
                helper_text: "Maxima cantidad de caracteres es de 150"

            
    
        MDFloatingActionButtonSpeedDial:
            callback: root.accion_boton
            id: botones
            root_button_anim: True

            
