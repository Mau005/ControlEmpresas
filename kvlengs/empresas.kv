

<VEmpresas>:
    padding: dp(45)

    MDCardPre:
        orientation: 'vertical'
        elevation: 10
        spacing: "20dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .95,.95
        padding: dp(38)
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDList:
                
                MDTextField:
                    id: rut_empresa
                    hint_text: "Rut Empresa*"
                    max_text_length: 12
                    helper_text_mode: "on_error"
                    helper_text: "Ingrese rut sin puntos y con '-': 18888888-5"

                MDTextField:
                    id: nombre_empresa
                    hint_text: "Nombre Empresa*"
                    max_text_length: 150
                    helper_text_mode: "on_error"
                    helper_text: "Maxima cantidad de caracteres es de 150"

                MDTextField:
                    id: giro_empresa
                    hint_text: "Giro*"
                    max_text_length: 150
                    helper_text_mode: "on_error"
                    helper_text: "Maxima cantidad de caracteres es de 150"


                MDTextField:
                    id: direccion_empresa
                    hint_text: "Direccion*"
                    max_text_length: 150
                    helper_text_mode: "on_error"
                    helper_text: "Maxima cantidad de caracteres es de 150"

                MDTextField:
                    id: telefono_empresa
                    hint_text: "Telefono"
                    max_text_length: 14
                    helper_text_mode: "on_error"
                    helper_text: "Maxima cantidad de caracteres es de 14"

                MDTextField:
                    id: celular_empresa
                    max_text_length: 14
                    hint_text: "Celular*"
                    helper_text_mode: "on_error"
                    helper_text: "Maxima cantidad de caracteres es de 14"

                MDTextField:
                    id: correo_empresa
                    hint_text: "Correo*"
                    max_text_length: 150
                    helper_text_mode: "on_error"
                    helper_text: "Debe contener un correo entendible"

                MDTextField:
                    id: correo_respaldo_empresa
                    max_text_length: 150
                    hint_text: "Correo Respaldo"
                    helper_text_mode: "on_error"
                    helper_text: "Maxima cantidad de caracteres es de 150"

            
    
        MDFloatingActionButtonSpeedDial:
            size_hint_y: .1
            callback: root.accion_boton
            id: botones
            root_button_anim: True

            
