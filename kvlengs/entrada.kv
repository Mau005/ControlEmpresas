<Entrada>:
    entrada_usuario:entrada_usuario
    pass_usuario:pass_usuario
    MDCardPre:
        orientation: 'vertical'
        size_hint: .9,.9
        elevation: 5
        spacing: "20dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        radius : dp(45)

        MDBoxLayout:
            size_hint_y: None
            height: "200dp"
            orientation: 'vertical'

            FitImage:
                source: "icon.png"
                size_hint_y: .8

        MDGridLayout:
            cols:1
            padding: "30dp"

            MDTextField:
                id:entrada_usuario
                icon_left: "email"
                hint_text: "Correo"

            MDTextField:
                id: pass_usuario
                password: True
                icon_left: 'key'
                hint_text: 'Contrase√±a'

        MDGridLayout:
            cols: 2
            padding: "30dp"
            MDLabel:
                text: "Guardar Usuario"
            MDCheckbox:
                id: usuario_guardar

        MDBoxLayout:
            size_hint_y: .1
            adaptive_size: True
            spacing: "12dp"
            pos_hint: {"center_x": .5, "center_y": .5}

            MDRectangleFlatButton:
                text: "Conectar"
                pos_hint: {"center_x": .5, "center_y": .5}
                halign: "center"
                on_release: root.ingresar_usuario(entrada_usuario.text, pass_usuario.text)
        MDBoxLayout:
            size_hint_y: .1
            adaptive_size: True
            spacing: dp(12)
            pos_hint: {"center_x": .5, "center_y": .5}
            MDIconButton:
                text: "Cambiar IP"
                icon: "ip-network"
                on_release: root.accion_boton("configurar ip")
            MDIconButton:
                icon : "account-box"
                text: "Recuperar Cuenta"
                on_release: root.accion_boton("recuperar")
            MDIconButton:
                icon: "exit-run"
                text: "Salir"
                on_release: root.accion_boton("salir")
