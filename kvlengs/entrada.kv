#:import MDCardPre ventanas.widgets_predefinidos

<Entrada>:
    entrada_usuario:entrada_usuario
    pass_usuario:pass_usuario
        
    MDCardPre:
        orientation: 'vertical'
        elevation: 10
        spacing: "20dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .95,.95

        FitImage:
            source: "./data/logo.png"

        MDGridLayout:
            cols:2
            padding: "30dp"
            MDLabel:
                text: "Correo:"

            MDTextField:
                id:entrada_usuario

            MDLabel:
                text: "Contrase√±a:"
            MDTextField:
                id: pass_usuario
                password: True

            MDLabel:
                text: "Guardar Usuario"
            MDCheckbox:
                id: usuario_guardar

        MDRectangleFlatButton:
            text: "Iniciar"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.ingresar_usuario(entrada_usuario.text, pass_usuario.text)
            
        MDRectangleFlatButton:
            text: "Salir"
            pos_hint: {"center_x": .5, "center_y": .5}

        MDRectangleFlatButton:
            text: "Recuperar Usuario"
            pos_hint: {"center_x": .5, "center_y": .5}
            
            
        