

<PreButton@Button>:
    size_hint: None, None
    size: "125dp", "45dp"

<PreLabel@MDLabel>:
    size_hint_x: .2

<VServicios>:
    nombre:nombre
    descr:descr
    id_estado:id_estado
    precio:precio
    botones_servicios:botones_servicios
        
    MDCardPre:
        orientation: 'vertical'
        elevation: 10
        spacing: "20dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .95,.95
        padding: dp(38)
        MDLabel:
            halign: "center"
            font_size : dp(30)
            size_hint_y: .1
            text: "Registrar Servicio"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            
            MDList:
                MDTextField:
                    hint_text: "Nombre:"
                    id: nombre
                MDRaisedButton:
                    id: id_estado
                    text: "Estados"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_release: root.desplegar_menu()
                MDTextField:
                    hint_text: "Precio:"
                    id:precio
                    input_filter: 'int'
                MDTextField:
                    id:descr
                    hint_text: "Descripcion:"
                    multiline: True

                MDLabel:
                    text: 
            
                MDRoundFlatButton:
                    text: "00/00/00 - 00/00/00"
                    id: btn_fecha
                    pos_hint: {"center_x": .5, "center_y": .5}
                    halign: "center"
                    on_release: root.abrir_fecha()
                
            
            
        MDFloatingActionButtonSpeedDial:
            size_hint_y: .2
            id: botones_servicios
            callback: root.accion_boton
            root_button_anim: True

                
