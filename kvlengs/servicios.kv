<VServicios>:
    nombre:nombre
    descr:descr
    id_estado:id_estado
    precio:precio
        
    MDCard:
        elevation: 5
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .9,.9
        MDLabel:
            halign: "center"
            font_size : dp(30)
            size_hint_y: .1
            text: "Registrar Servicios"
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDList:
                padding: dp(30)
                spacing: dp(15)
                MDTextField:
                    hint_text: "Nombre:"
                    id: nombre
                MDRaisedButton:
                    id: id_estado
                    text: "Estados:"
                    pos_hint: {"center_x": .5, "center_y": .5}
                MDTextField:
                    hint_text: "Precio:"
                    id:precio
                    input_filter: 'int'
                MDTextField:
                    id:descr
                    hint_text: "Descripcion:"
                    multiline: True

                MDLabel:
                    text: 
            
                MDRoundFlatButton:
                    text: "00/00/00 - 00/00/00"
                    id: btn_fecha
                    pos_hint: {"center_x": .5, "center_y": .5}
                    halign: "center"
                    on_release: root.abrir_fecha()

                MDRoundFlatButton:
                    text: "Rut Cliente:"
                    id: boton_rut_cliente

                MDRoundFlatButton:
                    text: "Rut Trabajador:"
                    id: boton_rut_trabajador

    MDFloatingActionButtonSpeedDial:
        id: botones_servicios
        on_release_stack_button: root.accion_boton(*args)
        root_button_anim: True

                
