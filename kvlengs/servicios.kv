#:import MDCardPre ventanas.widgets_predefinidos

<PreButton@Button>:
    size_hint: None, None
    size: "125dp", "45dp"

<PreLabel@MDLabel>:
    size_hint_x: .2

<VServicios>:
    nombre:nombre
    descr:descr
    estado:estado
    precio:precio
    botones_servicios:botones_servicios
        
    MDCardPre:
        orientation: 'vertical'
        elevation: 10
        spacing: "20dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .95,.95
        MDLabel:
            halign: "center"
            font_size : dp(55)
            size_hint_y: .1
            text: "Registrar Servicio"
        MDGridLayout:
            padding: "25dp"
            size_hint_y: .5
            cols: 2
            PreLabel:
                text: "Nombre:"
            MDTextField:
                id: nombre
            PreLabel:
                text: "Estado:"
            MDTextField:
                id:estado
            PreLabel:

                text: "Precio:"
            MDTextField:
                id:precio
            PreLabel:
                text: "Descripcion:"
            MDTextField:
                id:descr
                size_hint_y: None
                height: dp(35)
                multiline: True

            MDLabel:
                text: "Fechas"
        
            MDTextButton:
                size_hint: None, None
                width: dp(450)
                height: dp(45)
                text: "00/00/00 - 00/00/00"
                id: btn_fecha
                on_release: root.abrir_fecha()
            
            
        MDFloatingActionButtonSpeedDial:
            id: botones_servicios
            callback: root.test
            root_button_anim: True

                
