#:import MDCardPre ventanas.widgets_predefinidos

<PreButton@Button>:
    size_hint: None, None
    size: "125dp", "45dp"

<PreLabel@MDLabel>:
    size_hint_x: .2

<VServicios>:
        
    MDCardPre:
        orientation: 'vertical'
        elevation: 10
        spacing: "20dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .95,.95
        MDLabel:
            size_hint_x: .3
            text: "Registrar Servicio"
            pos_hint: {"center_x": .5, "center_y": .5}
        MDGridLayout:
            padding: "25dp"
            size_hint_x: .7
            cols: 2
            PreLabel:
                text: "Nombre:"
            MDTextField:
            PreLabel:
                text: "Descripcion:"
            MDTextField:
                multiline: True
            PreLabel:
                text: "Fecha Inicio:"
            MDRaisedButton:
                text: "Open date picker"
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_release: root.show_date_picker()
            PreLabel:
                text: "Fecha Termino:"
            MDRaisedButton:
                text: "Open date picker"
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_release: root.show_date_picker()
            PreLabel:
                text: "Estado:"
            MDTextField:
            PreLabel:
                text: "Precio:"
            MDTextField:
            
            
        MDFloatingActionButtonSpeedDial:
            id: botones_servicios
            root_button_anim: True

                
