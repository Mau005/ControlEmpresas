#:import MDCardPre ventanas.widgets_predefinidos

<PreButton@Button>:
    size_hint: None, None
    size: "125dp", "45dp"

<PreLabel@MDLabel>:
    size_hint_x: .2

<VPersonas>:
    botones:botones
    ScrollView:
            
        MDCardPre:
            orientation: 'vertical'
            elevation: 10
            spacing: "20dp"
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: .95,.95
            MDLabel:
            #RUT_PERSONA	NOMBRES	APELLIDOS	TELEFONO	CELULAR	CORREO
                halign: "center"
                font_size : dp(55)
                size_hint_y: .1
                text: "Registrar Personas"
            MDGridLayout:
                padding: dp(25)
                cols: 4
                PreLabel:
                    text: "Rut"
                MDTextField:
                PreLabel:
                    text: "-"
                MDTextField:
                    size_hint_x: None
                    widht: dp(10)
            MDGridLayout:
                padding: "25dp"
                cols: 2
                PreLabel:
                    text: "Nombre:"
                MDTextField:
                PreLabel:
                    text: "Apellidos:"
                MDTextField:
                PreLabel:
                    text: "Telefono:"
                MDTextField:
                PreLabel:
                    text: "Celular:"
                MDTextField:
                PreLabel:
                    text: "Correo:"
                MDTextField:
                    multiline : True

            
            
    
    MDFloatingActionButtonSpeedDial:
        callback: root.accion_boton
        id: botones
        root_button_anim: True

            
