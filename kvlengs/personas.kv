
<VPersonas>:
    botones:botones
    MDCardPre:
        orientation: 'vertical'
        elevation: 10
        spacing: "20dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .95,.95

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            padding: dp(55)
            MDList:
                MDTextField:
                    id: rut
                    max_text_length: 8
                    hint_text: "Rut Persona*"
                    max_text_length: 10
                    helper_text_mode: "on_focus"
                    helper_text: "Ingrese rut sin puntos y con '-': 18888888-5"


                MDTextField:
                    id: nombres
                    hint_text: "Nombres"
                    helper_text_mode: "on_error"
                    max_text_length: 150
                    helper_text: "Maximo 150 caracteres"
                MDTextField:
                    id: apellidos
                    hint_text: "Apellidos: "
                    max_text_length: 150
                    helper_text_mode: "on_error"
                    helper_text: "Minimo 3 caracteres y maximo 150"
                    
                MDTextField:
                    id: telefono
                    max_text_length: 14
                    hint_text: "Telefono"
                    helper_text_mode: "on_error"
                    helper_text: "maximo 14 caracteres"
                    
                MDTextField:
                    id: celular
                    max_text_length: 14
                    hint_text: "Celular"
                    helper_text_mode: "on_error"
                    helper_text: "maximo 14 caracteres"
                    
                MDTextField:
                    id: correo_sistema
                    max_text_length: 150
                    hint_text: "Correo"
                    required: "@"
                    helper_text_mode: "on_error"
                    helper_text: "debe incluir una @"

                MDRaisedButton:
                    text: "Empresa: "
                    id: boton_rut_empresas
                    on_release: root.buscar_empresas()

    MDFloatingActionButtonSpeedDial:
        callback: root.accion_boton
        id: botones
        root_button_anim: True

            
