<VListadoServicios>:
    contenedor:contenedor

    ScrollView:
        do_scroll_y: True
        do_scroll_x: False
    
        MDList:
            id: contenedor
            padding: dp(30)
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(55)
                MDLabel:
                    text: "Buscar ID: "
                
                MDTextField:
                    hint_text: "Ejemplo: 32"

                MDFlatButton:
                    text: "Buscar"

    MDFloatingActionButtonSpeedDial:
        on_release_stack_button: root.accion_boton(*args)
        id: botones_lista_servicios
        root_button_anim: True