


<VLocales>:
    MDCard:
        size_hint: .9, .9
        elevation: 5
        pos_hint: {"center_x": .5, "center_y": .5}
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDList:
                padding: dp(30)
                spacing: dp(25)
                MDLabel:
                    text: "Crear Locales"
                    font_size: dp(25)
                MDTextField:
                    hint_text: "Nombre Local"
                    id:nombre_local
                    helper_text: "max 100 caracteres"
                MDTextField:
                    id: telefono
                    hint_text: "Telefono: "
                    helper_text: "max 12 caracteres"
                MDTextField:
                    id: direccion
                    hint_text: "Direccion"
                    helper_text: "calle numero, comuna"

    MDFloatingActionButtonSpeedDial:
        size_hint_y: .1
        id: botones_locales
        on_release_stack_button: root.accion_boton(*args)
        root_button_anim: True
