<VProductos>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(10)
        MDCard:
            elevation: 5
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: .9,.9
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                MDList:
                    padding: dp(30)
                    MDTextField:
                        id: nombre_producto
                        hint_text: "Nombre Producto*"
                        max_text_length: 100
                        helper_text_mode: "on_error"
                        helper_text: "Maximo de 100 caracteres"

                    MDTextField:
                        id: descripcion
                        hint_text: "Descripci√≥n"
                        max_text_length: 250
                        multiline: True
                        helper_text_mode: "on_error"
                        helper_text: "Maximo de 250 caracteres"

                    MDTextField:
                        id: cantidad
                        hint_text: "Cantidad*"
                        max_text_length: 11
                        helper_text_mode: "on_focus"
                        input_filter: 'int'
                        helper_text: "Ingrese la cantida de productos"

                    MDRaisedButton:
                        text: "Local:"
                        id: menu_local

        MDCard:
            orientation: "vertical"
            size_hint: .9, .1
            elevation: 5
            pos_hint: {"center_x": .5, "center_y": .5}
            padding: dp(5)
            MDBoxLayout:
                adaptive_size: True
                spacing: dp(12)
                pos_hint: {"center_x": .5, "center_y": .5}
                MDRoundFlatButton:
                    text: "Crear"
                    on_release: root.crear()
                MDRoundFlatButton:
                    text: "Formatear"
                    on_release: root.formatear()
                MDRoundFlatButton:
                    text: "Volver"
                    on_release: root.siguiente()

