

<VTrabajadores>:
    botones_trabajadores:botones_trabajadores
    MDCardPre:
        size_hint: .95, .95
        adaptive_size: True
        elevation: 40
        pos_hint: {"center_x": .5, "center_y": .5}
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDList:
                padding: dp(30)
                spacing: dp(25)
                MDLabel:
                    text: "Asignar Trabajador"
                    font_size: dp(25)
                    haling: "center"
                MDRaisedButton:
                    text: "Rut: "
                    id: botton_rut_accion
                    on_release: root.desplegar_menu()

                MDRaisedButton:
                    text: "Local: "
                    id: botton_id_local
                    on_release: root.desplegar_menu_local()

                MDTextField:
                    hint_text: "Sueldo"
                    input_filter: "int"
                    id: sueldo_trabajador
                MDTextField:
                    id: dia_pago
                    hint_text: "DÃ­a de Pago: "
                    helper_text: "dias del mes entre 1 y 31"
                    input_fitler: "int"

    MDFloatingActionButtonSpeedDial:
        size_hint_y: .1
        id: botones_trabajadores
        callback: root.accion_boton
        root_button_anim: True

