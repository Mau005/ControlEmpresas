<VTrabajadores>:
    MDCard:
        size_hint: .9, .9
        elevation: 5
        pos_hint: {"center_x": .5, "center_y": .5}
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDList:
                padding: dp(30)
                spacing: dp(25)
                MDLabel:
                    text: "Asignar Trabajador"
                    font_size: dp(25)
                    haling: "center"
                MDRaisedButton:
                    text: "Rut Trabajador:"
                    id: botton_rut_accion

                MDRaisedButton:
                    text: "Departamento:"
                    id: botton_id_departamento

                MDTextField:
                    hint_text: "Sueldo"
                    input_filter: "int"
                    id: sueldo_trabajador

                MDTextField:
                    id: dia_pago
                    hint_text: "DÃ­a de Pago: "
                    helper_text: "dias del mes entre 1 y 31"
                    input_filter: "int"

    MDFloatingActionButtonSpeedDial:
        id: botones_trabajadores
        on_release_stack_button: root.accion_boton(*args)
        root_button_anim: True

