

<VListaNotasPersonas>:
    contenedor_registros:contenedor_registros
    MDBoxLayout:
        orientation: "horizontal"
        MDNavigationRail:
            anchor: "center"
            size_hint_x: .1
            elevation: .4
            MDNavigationRailItem:
                text: "Notas de Personas"
                icon: "arrow-down-bold-hexagon-outline"
                font_name: "nasalization-rg.ttf"

            MDNavigationRailItem:
                text: "Buscar"
                icon: "layers-search-outline"
                font_name: "nasalization-rg.ttf"
                on_release: root.crear()

            MDNavigationRailItem:
                text: "Limpiar"
                icon: "autorenew"
                font_name: "nasalization-rg.ttf"
                on_release: root.formatear()


            MDNavigationRailItem:
                text: "Volver"
                icon: "keyboard-return"
                font_name: "nasalization-rg.ttf"
                on_release: root.siguiente()
        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            padding: dp(10)
            MDCardPre:
                size_hint_y: .15
                pos_hint: {"center_x": .5, "center_y": .5}
                padding: dp(15)
                MDBoxLayout:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    MDLabel:
                        text: "Notas de Personas: "
                    MDRoundFlatButton:
                        text: "Rut Persona"
                        id: rut_persona
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                MDList:
                    id: contenedor_registros
                    spacing: dp(15)
                    padding: dp(20)