


<VOrden_Trabajos>:
    MDBoxLayout:
        orientation: "horizontal"
        MDNavigationRail:
            anchor: "center"
            size_hint_x: .1
            elevation: .4
            MDNavigationRailItem:
                text: "Crear Ordenes de Trabajo"
                icon: "arrow-down-bold-hexagon-outline"
                font_name: "nasalization-rg.ttf"

            MDNavigationRailItem:
                text: "Crear"
                icon: "pencil"
                font_name: "nasalization-rg.ttf"
                on_release: root.crear()

            MDNavigationRailItem:
                text: "Limpiar"
                icon: "autorenew"
                font_name: "nasalization-rg.ttf"
                on_release: root.formatear()


            MDNavigationRailItem:
                text: "Volver"
                icon: "keyboard-return"
                font_name: "nasalization-rg.ttf"
                on_release: root.siguiente()
        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            padding: dp(10)
            MDCardPre:
                size_hint: .9, .9
                pos_hint: {"center_x": .5, "center_y": .5}
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDList:
                        padding: dp(30)
                        spacing: dp(25)
                        MDLabel:
                            text: "OT"
                            font_size: dp(25)
                        MDRectangleFlatButton:
                            id: id_servicios
                            text: "Servicio"
                        MDRectangleFlatButton:
                            id: fecha_termino_ot
                            text: "Fecha Termino"
                        MDRectangleFlatButton:
                            id: id_estados_preparativos
                            text: "Preparativos"
                        MDRectangleFlatButton:
                            id: id_departamento_ot
                            text: "Departamentos"
                        MDTextField:
                            id: precio_ot
                            hint_text: "Precio (Opcional)"
                        MDTextField:
                            id: descripcion_ot
                            hint_text: "Descripci√≥n"
                            multiline: True