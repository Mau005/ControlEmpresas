<VListadoServicios>:
    contenedor:contenedor
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(10)
        MDCardPre:
            size_hint_x: .9
            pos_hint: {"center_x": .5, "center_y": .5}
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                MDList:
                    id: contenedor
                    padding: dp(30)
                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: dp(55)
                        MDLabel:
                            text: "Buscar ID: "

                        MDTextField:
                            hint_text: "Ejemplo: 32"

                        MDRaisedButton:
                            text: "Buscar"
        MDCardPre:
            orientation: "vertical"
            size_hint: .9, .1
            pos_hint: {"center_x": .5, "center_y": .5}
            padding: dp(5)
            MDBoxLayout:
                adaptive_size: True
                spacing: dp(12)
                pos_hint: {"center_x": .5, "center_y": .5}
                MDRaisedButton:
                    text: "Crear"
                    on_release: root.crear()
                MDRaisedButton:
                    text: "Formatear"
                    on_release: root.formatear()
                MDRaisedButton:
                    text: "Volver"
                    on_release: root.siguiente()