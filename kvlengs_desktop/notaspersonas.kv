<VNotasPersonas>:
    MDBoxLayout:
        orientation: "horizontal"
        MDNavigationRail:
            anchor: "center"
            size_hint_x: .1
            elevation: .4
            MDNavigationRailItem:
                text: "Notas de Personas"
                icon: "arrow-down-bold-hexagon-outline"
                font_name: "nasalization-rg.ttf"

            MDNavigationRailItem:
                text: "Crear"
                icon: "pencil"
                font_name: "nasalization-rg.ttf"
                on_release: root.crear()

            MDNavigationRailItem:
                text: "Limpiar"
                icon: "autorenew"
                font_name: "nasalization-rg.ttf"
                on_release: root.formatear()


            MDNavigationRailItem:
                text: "Volver"
                icon: "keyboard-return"
                font_name: "nasalization-rg.ttf"
                on_release: root.siguiente()
        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            padding: dp(10)
            MDCard:
                elevation: 5
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint: .9,.9
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDList:
                        spacing: dp(15)
                        padding: dp(45)
                        MDRaisedButton:
                            text: "Rut Persona:"
                            id: boton_persona

                        MDTextField:
                            id: nota_persona
                            size_hint_y : None
                            hint_text: "Nota"
                            height: dp(300)
                            multiline: True
                            max_text_length: 250
                            helper_text_mode: "on_error"
                            helper_text: "maximo 250 caracteres"