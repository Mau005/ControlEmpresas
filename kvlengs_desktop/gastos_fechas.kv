<VGastosFechas>:
    MDBoxLayout:
        orientation: "horizontal"
        MDNavigationRail:
            anchor: "center"
            size_hint_x: .1
            MDNavigationRailItem:
                text: "Gastos por Fechas"
                icon: "arrow-down-bold-hexagon-outline"
                font_name: "nasalization-rg.ttf"

            MDNavigationRailItem:
                text: "Buscar"
                icon: "layers-search-outline"
                font_name: "nasalization-rg.ttf"
                on_release: root.crear()

            MDNavigationRailItem:
                text: "Limpiar"
                icon: "autorenew"
                font_name: "nasalization-rg.ttf"
                on_release: root.formatear()


            MDNavigationRailItem:
                text: "Volver"
                icon: "keyboard-return"
                font_name: "nasalization-rg.ttf"
                on_release: root.siguiente()
        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            padding: dp(10)
            MDCardPre:
                size_hint: .9, .9
                pos_hint: {"center_x": .5, "center_y": .5}
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDList:
                        padding: dp(30)
                        spacing: dp(25)
                        MDLabel:
                            text: "Solicitar Gastos Por Fechas"
                            font_size: dp(25)

                        MDBoxLayout:
                            adaptive_size: True
                            pos_hint: {"center_x":.5, "center_y": .5}
                            MDRaisedButton:
                                id: departamentos
                                text: "Departamento:"
                            MDRaisedButton:
                                text: "00/00/00 al 00/00/00"
                                id: rango_fechas
                                on_release:root.desplegar_fechas()
                        MDBoxLayout:
                            size_hint_y: None
                            height: dp(250)
                            MDCardPre:
                                ScrollView:
                                    do_scroll_x: False
                                    do_scroll_y: True
                                    MDList:
                                        id: contenedor_gastos
                        MDLabel:
                            text: "Total Gasto:"
                            style: "H5"
                            id: total_gastos

                        MDRaisedButton:
                            text: "Exportar Excel"
                            on_release: root.desplegar_archivos()