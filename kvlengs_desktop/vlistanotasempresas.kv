

<VListaNotasEmpresas>:
    contenedor_registros:contenedor_registros
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(10)
        MDCard:
            size_hint_y: .15
            elevation: 5
            pos_hint: {"center_x": .5, "center_y": .5}
            padding: dp(15)
            MDBoxLayout:
                pos_hint: {"center_x": .5, "center_y": .5}
                MDLabel:
                    text: "Buscar: "
                MDRoundFlatButton:
                    text: "Rut Empresa"
                    id: rut_empresa
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            MDList:
                id: contenedor_registros
                spacing: dp(15)
                padding: dp(20)

        MDCard:
            orientation: "vertical"
            size_hint: .9, .1
            elevation: 5
            pos_hint: {"center_x": .5, "center_y": .5}
            padding: dp(5)
            MDBoxLayout:
                adaptive_size: True
                spacing: dp(12)
                pos_hint: {"center_x": .5, "center_y": .5}
                MDRoundFlatButton:
                    text: "Buscar Empresas"
                    on_release: root.crear()
                MDRoundFlatButton:
                    text: "Formatear"
                    on_release: root.formatear()
                MDRoundFlatButton:
                    text: "Volver"
                    on_release: root.siguiente()
