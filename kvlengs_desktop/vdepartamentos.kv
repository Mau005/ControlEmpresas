<VDepartamentos>:
    MDBoxLayout:
        orientation: "horizontal"
        MDNavigationRail:
            anchor: "center"
            size_hint_x: .1
            MDNavigationRailItem:
                text: "Crear Departamentos"
                icon: "arrow-down-bold-hexagon-outline"
                font_name: "nasalization-rg.ttf"

            MDNavigationRailItem:
                text: "Crear"
                icon: "pencil"
                font_name: "nasalization-rg.ttf"
                on_release: root.crear()

            MDNavigationRailItem:
                text: "Limpiar"
                icon: "autorenew"
                font_name: "nasalization-rg.ttf"
                on_release: root.formatear()


            MDNavigationRailItem:
                text: "Volver"
                icon: "keyboard-return"
                font_name: "nasalization-rg.ttf"
                on_release: root.siguiente()

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            padding: dp(10)
            MDCardPre:
                size_hint: .9, .9
                pos_hint: {"center_x": .5, "center_y": .5}

                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDList:
                        padding: dp(30)
                        spacing: dp(25)
                        MDLabel:
                            text: "Crear Departamento"
                            font_size: dp(25)
                            haling: "center"
                        MDTextField:
                            hint_text: "Nombre Departamento"
                            id:nombre_grupo
                            helper_text: "max 50 caracteres"
                        MDTextField:
                            id: desc_grupo
                            hint_text: "Descripci√≥n: "
                            helper_text: "max 12 caracteres"
                            multiline: True
                        MDRaisedButton:
                            text: "Local:"
                            id: menu_local