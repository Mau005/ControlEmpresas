


<VGastos>:

    MDBoxLayout:
        orientation: "horizontal"
        MDNavigationRail:
            anchor: "center"
            size_hint_x: .1
            elevation: .4
            MDNavigationRailItem:
                text: "Gastos"
                icon: "arrow-down-bold-hexagon-outline"
                font_name: "nasalization-rg.ttf"

            MDNavigationRailItem:
                text: "Crear"
                icon: "pencil"
                font_name: "nasalization-rg.ttf"
                on_release: root.crear()

            MDNavigationRailItem:
                text: "Limpiar"
                icon: "autorenew"
                font_name: "nasalization-rg.ttf"
                on_release: root.formatear()


            MDNavigationRailItem:
                text: "Volver"
                icon: "keyboard-return"
                font_name: "nasalization-rg.ttf"
                on_release: root.siguiente()

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(20)
            padding: dp(10)
            MDCardPre:
                size_hint_x: .9
                pos_hint: {"center_x": .5, "center_y": .5}
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDList:
                        padding: dp(30)
                        spacing: dp(25)
                        MDLabel:
                            text: "Crear Gastos"
                            font_size: dp(25)
                            haling: "center"

                        MDBoxLayout:
                            adaptive_size: True
                            spacing: dp(12)
                            pos_hint: {"center_x": .5, "center_y": .5}
                            MDRoundFlatButton:
                                text: "Departamento:"
                                id:departamento

                            MDRoundFlatButton:
                                text: "Tipo Gasto:"
                                id:estado_gasto

                        MDTextField:
                            id: saldo
                            hint_text: "Saldo"
                            input_filter: 'int'

                        MDRoundFlatButton:
                            text: "Fecha Creación: 00/00/00"
                            id: fecha_creacion
                            on_release: root.abrir_fecha()

                        MDTextField:
                            id: descripcion
                            hint_text: "Descripción"
                            multiline: True
